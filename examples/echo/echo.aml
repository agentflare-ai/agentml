<?xml version="1.0" encoding="UTF-8"?>
<agent xmlns="github.com/agentflare-ai/agentml/agent"
  datamodel="ecmascript"
  xmlns:stdin="github.com/agentflare-ai/agentml/stdin">

  <datamodel>
    <data id="user_input" expr="''" />
  </datamodel>

  <state id="main">
    <state id="read_input">
      <onentry>
        <!-- Read from stdin without a prompt -->
        <stdin:read location="user_input" prompt="" />
      </onentry>
      <transition target="log_output" />
    </state>

    <state id="log_output">
      <onentry>
        <!-- Log the input just like echo -->
        <log expr="user_input" />
      </onentry>
      <transition target="read_input" />
    </state>
  </state>


</agent>